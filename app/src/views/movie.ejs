<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= movie_info.title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Montserrat:wght@700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      margin: 0; /* Remove margin to eliminate gap at the top */
      background-color: #121212;
      color: #ffffff;
    }

    .header {
      width: 100%; /* Span the entire width of the page */
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px; /* Thinner header */
      background-color: #00bcd4; /* Cyan blue background */
      border-bottom: 1px solid #333;
      margin-bottom: 20px;
    }

    .header h1 {
      margin: 0;
      font-size: 24px; /* Smaller font size for thinner header */
      font-weight: 700;
      color: #ffffff;
      font-family: 'Montserrat', sans-serif; /* Stylish font */
    }

    .header a {
      color: #ffffff;
      text-decoration: none;
      font-size: 16px;
      font-weight: 700;
    }

    .movie-container {
      max-width: 600px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #333;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
      background-color: #1e1e1e;
      text-align: center;
    }

    .movie-title {
      font-size: 24px;
      margin-bottom: 10px;
    }

    .movie-poster {
      width: 50%;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .movie-info {
      text-align: left;
      margin-top: 20px;
    }

    .movie-info p {
      margin: 5px 0;
    }

    .movie-info span {
      font-weight: bold;
    }

    .movie-recommendations {
      margin-top: 40px;
    }

    .recommendations-grid {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 20px;
    }

    .recommendation-item {
      text-align: center;
    }

    .recommendation-item img {
      width: 45%;
      border-radius: 10px;
    }

    .recommendation-item p {
      margin-top: 10px;
      font-size: 14px;
      color: #ffffff;
    }
  </style>
</head>
<body>
  <div class="header">
    <a href="/"><h1>Movie Recommendations</h1></a>
  </div>

  <div class="movie-container">
    <h1 class="movie-title"><%= movie_info.title %></h1>
    <img class="movie-poster" src="https://image.tmdb.org/t/p/original/<%= movie_info.poster_path %>" alt="<%= movie_info.title %>">
    <div class="movie-info">
      <p><span>Description:</span> <%= movie_info.overview %></p>
      <p><span>Release Date:</span> <%= movie_info.release_date %></p>
      <p><span>Runtime:</span> <%= movie_info.runtime %> minutes</p>
      <p><span>Genres:</span> <%= movie_info.genres.map(genre => genre.name).join(', ') %></p>
      <p><span>Produced by:</span> <%= movie_info.production_companies.map(production_companies => production_companies.name).join(', ') %></p>
      <p><span>Average Score:</span> <%= movie_info.vote_average %>/10</p>
      <p><span>Votes:</span> <%= movie_info.vote_count %></p>
    </div>
  </div>

  <div class="movie-recommendations">
    <h2><a href="/">Viewers Also Liked</a></h2>
    <div class="recommendations-grid">
      <% recommended_movies_info.forEach((recommendation) => { %>
        <div class="recommendation-item">
          <a href="/movies/<%= recommendation.id %>">
            <img src="https://image.tmdb.org/t/p/original/<%= recommendation.poster_path %>" alt="<%= recommendation.title %>">
            <p><%= recommendation.title %></p>
          </a>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>